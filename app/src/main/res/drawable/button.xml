<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <solid android:color="#84251c"/>

            <stroke android:color="#291f1e"
                android:width="1dp"/>

            <corners android:radius="35dp"/>
            <padding android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>
        </shape>
    </item>


    <item>
        <shape>
            <solid android:color="#f24333"/>

            <stroke android:color="#291f1e"
                android:width="1dp"/>

            <corners android:radius="35dp"/>
            <padding android:bottom="5dp"

                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>
        </shape>
    </item>
</selector>